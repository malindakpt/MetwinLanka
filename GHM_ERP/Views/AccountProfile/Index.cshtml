@model IEnumerable<BusinessObjects.Categories.AccountProfile>
@using BusinessObjects;
@using BusinessObjects.Categories;

@{
    ViewBag.Title = "Account Profiles";
}

<h2>Account Profiles</h2>

<p>
    @Html.ActionLink("New Account Profile", "Create")
</p>
@{
    var acList = (IEnumerable<Account>)ViewBag.Accounts;
    var accountMap = acList.ToDictionary(ac => ac.Id);
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.IsEnabled)
        </th>*@
        <th>
            Account
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.IsEnabled)
        </td>*@
        <td>
            @accountMap[item.AccountId].Name
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
