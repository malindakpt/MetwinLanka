@model BusinessObjects.Location

@{
    ViewBag.Title = Model.Name;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) 
{
   
    <div class="form-horizontal">
        <h4>Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-static" } })
                @*<span class="form-control form-control-static" > @Model.Name</span>*@
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2 ">
                <input type="submit" value="Change" class="btn btn-primary" />

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Clients</label>
            <div class="col-md-4 ">
                @foreach (var client in Model.Clients)
                {
                    @Html.ActionLink(client.Name, "Details", "Customer", new { id = client.Id }, new { }) <br />
                }
            </div>

        </div>
       
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
