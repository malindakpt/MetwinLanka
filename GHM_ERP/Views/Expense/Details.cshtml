@model BusinessObjects.Invoice
@using GHM_ERP.Util


@{
    ViewBag.Title = "Expense Details";
}

<h2>Expense Details</h2>

<div>
  
	<hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.FormattedInvoiceNo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FormattedInvoiceNo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Time)
        </dt>

        <dd>
            @Html.FormatAsDateTime(Model.Time)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Reference 
        </dt>
        <dd>
           @string.Join(", ",Model.PaymentReceipts.Select(pr => pr.RefNo))
        </dd>

        <dt>
            Expense Account
        </dt>

        <dd>
            @(((BusinessObjects.Account)ViewBag.ExpenseAccount).Name)
        </dd>

        <dt>
            Amount
        </dt>

        <dd>

            @Html.FormatAsMoney(Model.GetNonCreditPaymentTotal())
        </dd>

    </dl>
</div>
<p >

    @Html.ActionLink("Back to List", "Index")
</p>
