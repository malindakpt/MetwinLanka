@model BusinessObjects.Invoice
@using GHM_ERP.Util;


@{
    ViewBag.Title = "New Sale From Order";
}

<h2>@ViewBag.Title</h2>

<div>
    @*<h4>Invoice</h4>*@
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClientId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClientId)
        </dd>

        <dt>
            Order Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
           Sales Rep
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SalesRep.FullName)
        </dd>



    </dl>
    @using (Html.BeginForm())
    {
         <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Time, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input name="Time" class="form-control time"  type="datetime"  required value="@Html.FormatAsDateTime(DateTime.Now)">
                </div>
            </div>
        </div>
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
