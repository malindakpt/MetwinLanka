@model IEnumerable<BusinessObjects.Categories.RawMaterialProfile>
@using GHM_ERP.Util;
@{
    ViewBag.Title = "Raw Material Profiles";
}

<h2>Raw Material Profiles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
           
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thickness)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Width)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsEnabled)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(@item.Code, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Thickness)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Width)
        </td>
        <td>
            @Html.ActivenessDisplay(item.IsEnabled)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@ 
          
        </td>
    </tr>
}

</table>
