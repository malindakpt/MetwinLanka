@model BusinessObjects.Invoice
@using GHM_ERP.Util

@{
    ViewBag.Title = "Salary Payment Details";
}

<h2>@ViewBag.Title</h2>

<div>
    @*<h4>Details</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Invoice No.
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FormattedInvoiceNo)
        </dd>


        <dt>
            Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    <hr/>

    <table class="table table-condensed table-striped">
        <thead>
            <tr>
                <th>Account</th>
                <th>Code</th>
                <th>Description</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PaymentReceipts)
            {
                <tr>
                    <td>@item.TransferTo.Name</td>
                    <td>@item.TransferTo.Code</td>
                    <td>@item.Description</td>
                    <td>@Html.FormatAsMoney(item.Amount)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3">Total Payable</th>
                <th>@Html.FormatAsMoney(Model.PaymentReceipts.Sum(recp=>recp.Amount))</th>
            </tr>
        </tfoot>
    </table> 
</div>
<p>

    @Html.ActionLink("Back to List", "Index")
</p>
