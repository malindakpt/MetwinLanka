@model TransferAccountModel
@using GHM_ERP.Models;
@using GHM_ERP.Util;

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        <div class="row">
            <div class="col-md-7">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Time, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBox("Time",Html.FormatAsDateTime(DateTime.Now), new { @class = "form-control time", type = "datetime" })
                            @Html.ValidationMessageFor(model => model.Time)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description)

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Reference, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Reference, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Reference)

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Amount)

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FromAccountId, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">

                            @*@Html.TextBoxFor(model => model.AccountId, new { @class = "form-control" })*@
                            @Html.DropDownListFor(model => model.FromAccountId, new SelectList(ViewBag.FromAccounts, "Id", "Name"), new { @class = "combosearch form-control" })
                            @Html.ValidationMessageFor(model => model.FromAccountId)

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ToAccountId, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">

                            @*@Html.TextBoxFor(model => model.AccountId, new { @class = "form-control" })*@
                            @Html.DropDownListFor(model => model.ToAccountId, new SelectList(ViewBag.ToAccounts, "Id", "Name"), new { @class = "combosearch form-control" })
                            @Html.ValidationMessageFor(model => model.ToAccountId)

                        </div>
                    </div>

                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>


        </div> <!-- row end -->


    </div>
}
